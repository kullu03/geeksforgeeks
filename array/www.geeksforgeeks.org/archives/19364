<p><code><br />
int isTriplet(int *a, int n, int sum , int count)<br />
{<br />
  if(sum==0)<br />
   return 1;<br />
  if(count ==3)<br />
   return 0<br />
  else<br />
   return isTriplet(a,n-1,sum-a[n],count+1) || isTriplet(a,n-1,sum,count);<br />
}<br />
</code></p>
