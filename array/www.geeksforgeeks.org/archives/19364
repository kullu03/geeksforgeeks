bool solve(vector&lt;int&gt; a,int k)
{
   for(int i=0;i&lt;a.size()-3;i++)
   for(int j=a.size()-1;j&gt;i;j--)
   if(binary_search(a.begin()+i,a.begin()+j,k-(a[i]+a[j])))
