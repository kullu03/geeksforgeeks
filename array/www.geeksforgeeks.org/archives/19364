<p>import java.util.Arrays;</p>
<p>public class TripletSumToAGivenValue {</p>
<p>	int arr[]= new int[]{2,3,5,3,5};</p>
<p>	int value = 10;</p>
<p>	boolean flag = false;</p>
<p>	void tripletSumToValue(){</p>
<p>		System.out.print(&#8220;Triplets are&#8221;);</p>
<p>		Arrays.sort(arr);</p>
<p>		int i = 0;</p>
<p>		int j = arr.length-1;</p>
<p>		int k = 1;</p>
<p>		while(k value)</p>
<p>			j&#8211;;</p>
<p>		    else{</p>
<p>			i++;</p>
<p>			k++;</p>
<p>		    }</p>
<p>	              }</p>
<p>	              if( !flag)</p>
<p>		System.out.println(&#8221; not found for this value in array&#8221;);	</p>
<p>	}</p>
<p>	public static void main(String args[]){</p>
<p>		TripletSumToAGivenValue obj = new TripletSumToAGivenValue();</p>
<p>		obj.tripletSumToValue();</p>
<p>	}</p>
<p>}</p>
