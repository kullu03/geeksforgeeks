    <li class="comment even thread-odd thread-alt depth-1" id="dsq-comment-7345">
        <div id="dsq-comment-header-7345" class="dsq-comment-header">
            <cite id="dsq-cite-7345">
http://www.groupme.in                <span id="dsq-author-user-7345">Nikin</span>
            </cite>
        </div>
        <div id="dsq-comment-body-7345" class="dsq-comment-body">
            <div id="dsq-comment-message-7345" class="dsq-comment-message"><pre> <code language="C">
void btree::makeSortedArrayTree(node **sr, int arr[], int start, int end)
{
	if(start &lt;= end)
	{
		int mid = (start+end)/2;
		if(!*sr)
		{
			node *temp = new node;
			temp-&gt;data = arr[mid];
			temp-&gt;left = NULL;
			temp-&gt;right = NULL;
			temp-&gt;next = NULL;
			*sr = temp;
		}
		makeSortedArrayTree(&amp;(*sr)-&gt;left, arr, start, mid-1);
		makeSortedArrayTree(&amp;(*sr)-&gt;right, arr, mid+1, end);
	}
}

void btree::buildSortedTree(int arr[], int start, int end)
{
	makeSortedArrayTree(&amp;root, arr, start, end); 
}
</code> </pre>
</div>
        </div>

